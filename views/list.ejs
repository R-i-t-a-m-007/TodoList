<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="box" id="heading">
    <h1> <%= listType %> </h1>
    </div>
    <div class="box">
        <% newlistItems.forEach(element => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element.id %>" onchange="this.form.submit()">
                    <p> <%= element.name  %> </p>
                    </div>
            </form>
       <% }) %>
    <form action="/" method="post" class="item">
        <input type="text" name="newItem" placeholder="New item" autocomplete="off" required>
        <button type="submit" name="List" value="<%= listType %>">+</button>
    </form>
    </div>
    <footer>
        Made with <span aria-label="img">❤️</span> by <a href="mailto:ritammahanty6@gmail.com" target="_blank" rel="noopener noreferrer"> Ritam Mahanty </a>
    </footer>
</body>
</html>